{
  "manifest_version": 2,
  "name": "Context Search",
  "description": "Search selected text on multiple search engines via the context menu.",
  "version": "0.9.3",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "bookmarks"
  ],

  "options_ui": {
      "page": "options/options.html",
      "browser_style": true
  },

  "icons": {
    "48": "icons/cs-48.png"
  }

}
